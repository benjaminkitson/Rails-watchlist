
<div class="bookmark-form-box">
  <%= simple_form_for [@list, @bookmark] , :url => list_bookmarks_path, html: { class: "form-class" } do |f|%>
    <div class="dropdown form-element">
      <%=f.input :movie_id, collection: @movies %>
    </div>
    <div class="form-element">
      <%=f.input :comment, { class: "form-class" } %>
      <span><%= @bookmark.errors.messages[:comment].first if @bookmark.errors.any? %> </span>
    </div>
    <div class="form-element">
      <%= f.submit "+", { class: "new-list-button" } %>
    </div>
  <% end %>
</div>
